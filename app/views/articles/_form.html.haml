= form_for @article do |f|
  -if @article.errors.any?
    #error_explanation
      %h2= "#{pluralize(@article.errors.count, "error")} prohibited this article from being saved:"
      %ul
        - @article.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :content
    = f.text_field :content
  .field
    = f.label :location_id
    = f.number_field :location_id
  .field
    = f.label :publisher_id
    = f.text_field :publisher_id
  .field
    = f.label :published_date
    = f.date_select :published_date
  .field
    = f.label :category_id
    = f.number_field :category_id
  .actions
    = f.submit 'Save'
